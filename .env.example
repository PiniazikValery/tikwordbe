# Server Configuration
PORT=3000

# YouTube API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tickword
DB_USER=postgres
DB_PASSWORD=postgres

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Rate Limiting Configuration (optional)
RATE_LIMIT_USER_PER_HOUR=30
RATE_LIMIT_IP_PER_HOUR=10

# Whisper Configuration
# Set to 'true' to use GPU for faster transcription (requires NVIDIA GPU and nvidia-docker)
USE_GPU=false

# RevenueCat Configuration (for subscription verification)
# Get your API key from: https://app.revenuecat.com/settings/api-keys
# Use the SECRET API key (not public) - starts with "sk_"
REVENUECAT_API_KEY=sk_bRJjUxyHreoAKhCCKasBCOGJzatFV
# Entitlement ID configured in RevenueCat (default: "premium")
REVENUECAT_ENTITLEMENT_ID=TikWord Pro

# AI Paywall Configuration (for free tier limits)
# Number of free AI requests allowed per window (default: 3)
AI_FREE_REQUESTS_LIMIT=3
# Time window in minutes for free requests (default: 240 = 4 hours)
AI_FREE_REQUESTS_WINDOW_MINUTES=240
